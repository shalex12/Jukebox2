<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.alex.jukebox.MainActivity">


    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="MP3 Mode"
        android:id="@+id/mp3ModeButton"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="61dp"
        android:onClick="mp3ModeClicked"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="DJ Mode"
        android:id="@+id/djModeButton"
        android:layout_below="@+id/mp3ModeButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="63dp"
        android:onClick="djModeClicked"/>

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Voter Mode"
        android:id="@+id/button"
        android:layout_below="@+id/djModeButton"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="66dp" 
        android:onClick="voterModeClicked"/>
</RelativeLayout>
